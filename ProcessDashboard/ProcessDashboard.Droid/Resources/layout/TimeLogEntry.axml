<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

  <TextView
    android:id="@+id/TimeLogEdit_ProjectName"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    
    />


  <TextView
    android:id="@+id/TimeLogEdit_TaskName"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    
    />


  <TextView
    android:id="@+id/TimeLogEdit_StartTimeText"
    android:text="Start Time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    
    />

  <EditText
    android:id="@+id/TimeLogEdit_StartTime"
    android:text=""
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:focusable="false"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    
    />
  <TextView
    android:id="@+id/TimeLogEdit_DeltaTimeText"
    android:text="Delta Time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    
    />

  <EditText
    android:id="@+id/TimeLogEdit_DeltaTime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="hh:mm"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    />
  <TextView
    android:id="@+id/TimeLogEdit_InterruptTimeText"
    android:text="Interrupt Time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    />

  <EditText
   android:id="@+id/TimeLogEdit_InterruptTime"
 
   android:text=""
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:hint="hh:mm"
   android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    />
  <TextView
   android:id="@+id/TimeLogEdit_CommentText"
   android:text="Comment"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
      android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    />
  <EditText
   
   android:id="@+id/TimeLogEdit_Comment"
   android:text=""
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
      android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    />
</LinearLayout>